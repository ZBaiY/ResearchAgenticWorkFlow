#!/usr/bin/env bash
set -euo pipefail

SCRIPT_PATH="${BASH_SOURCE[0]}"
if [[ "$SCRIPT_PATH" != */* ]]; then
  SCRIPT_PATH="$(command -v -- "$SCRIPT_PATH")"
fi

REPO_ROOT="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
TARGET="$REPO_ROOT/bin/a"

if [[ ! -x "$TARGET" ]]; then
  echo "ERROR: missing executable $TARGET" >&2
  exit 1
fi

exec "$TARGET" "$@"
