{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "compute hashes",
  "type": "object",
  "additionalProperties": false,
  "required": ["generated_at_utc", "inputs", "outputs"],
  "properties": {
    "generated_at_utc": { "type": "string" },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "exists", "bytes", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "exists": { "type": "boolean" },
          "bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "exists", "bytes", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "exists": { "type": "boolean" },
          "bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  }
}
